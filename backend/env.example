# Server Configuration
PORT=3001

# TMDB API Key
# Get your API key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# OpenAI API Key
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# API Token for protecting RSS and refresh endpoints
# Generate a secure random token
API_TOKEN=your_secure_api_token_here

# Radarr Configuration (Optional)
# Get your API key from Radarr Settings → General → Security → API Key
# Base URL should be your Radarr instance URL (e.g., http://192.168.1.100:7878 or http://radarr.local:7878)
RADARR_API_KEY=your_radarr_api_key_here
RADARR_BASE_URL=http://localhost:7878

