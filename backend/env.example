# Server Configuration
PORT=3001

# TMDB API Key
# Get your API key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# OpenAI API Key
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# API Token for protecting RSS and refresh endpoints
# Generate a secure random token
API_TOKEN=your_secure_api_token_here

# Background scheduler configuration (optional)
# Enable automatic movie refresh in the background (default: true)
ENABLE_AUTO_REFRESH=true
# Hours between automatic refreshes (default: 24)
REFRESH_INTERVAL_HOURS=24
# Minutes to wait before first refresh after server start (default: 5)
REFRESH_INITIAL_DELAY_MINUTES=5

# Radarr Configuration (Optional - for Movies)
# Get your API key from Radarr Settings → General → Security → API Key
# Base URL should be your Radarr instance URL (e.g., http://192.168.1.100:7878 or http://radarr.local:7878)
RADARR_API_KEY=your_radarr_api_key_here
RADARR_BASE_URL=http://localhost:7878

# Sonarr Configuration (Optional - for TV Shows)
# Get your API key from Sonarr Settings → General → Security → API Key
# Base URL should be your Sonarr instance URL (e.g., http://192.168.1.100:8989 or http://sonarr.local:8989)
SONARR_API_KEY=your_sonarr_api_key_here
SONARR_BASE_URL=http://localhost:8989

# CORS Configuration (Optional)
# Comma-separated list of allowed origins for CORS
# In development, localhost origins are automatically allowed
# Example: CORS_ORIGINS=https://cinemind.app,https://www.cinemind.app
CORS_ORIGINS=

